<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    android:weightSum="5"
    android:id="@+id/linear_layout">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        app:cardElevation="@dimen/_4sdp"
        app:contentPadding="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/image" />
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@id/product_image"
                    android:layout_toStartOf="@+id/icon_favorite"
                    android:maxLines="4"
                    android:text="product_name"/>
                <TextView
                    android:id="@+id/product_catagory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_4sdp"
                    android:layout_toEndOf="@id/product_image"
                    android:layout_below="@id/product_name"
                    android:textSize="@dimen/_10sdp"
                    android:text="product_category"/>
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_toEndOf="@id/product_image"
                    android:textSize="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:text="product_price"/>

                <ImageView
                    android:id="@+id/icon_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_favorite_border_24"
                    android:layout_alignParentEnd="true"/>

                <RelativeLayout
                    android:id="@+id/quantity_layout"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/minus"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="@dimen/_4sdp"
                        android:layout_alignParentStart="true"
                        app:cardBackgroundColor="#ff6750a4"
                        >
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/minus"
                            android:layout_centerInParent="true"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/amount_of_items"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:text="1"
                        android:layout_centerHorizontal="true"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/plus"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:cardCornerRadius="@dimen/_4sdp"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:cardBackgroundColor="#ff6750a4"
                        >
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/plus"
                            android:layout_centerInParent="true"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:layout_marginEnd="@dimen/_10sdp">
        <ImageView
            android:id="@+id/icon_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/vector_cross"/>
    </RelativeLayout>

</LinearLayout>
